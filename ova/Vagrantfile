# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "centos/7"
  config.vm.hostname = "wazuhmanager"

  config.vm.provider "virtualbox" do |vb|
    vb.name = "vm_wazuh"
    vb.memory = "5120"
    vb.cpus = "4"
  end
    config.vm.provision :shell, path: "provision.sh", :args => "#{ENV['OVA_WAZUH_VERSION']} #{ENV['OVA_OPENDISTRO_VERSION']}  #{ENV['OVA_FILEBEAT_VERSION']}  #{ENV['STATUS_PACKAGES']}} -d"
end
